@model BookishWebApplication.Models.View.SearchBooksViewModel

@{
    ViewData["Title"] = "Edit Authors";
}

<div class="text-center">
    <h1 class="display-4">Edit Authors</h1>
    <div class="post-form-container">
            <form method = "post" action="/author/create">
                <fieldset>
                    <legend>Create an Author (* is required)</legend>
                    <label for="FirstName">First Name*</label><br/>
                    <input type="text" id="FirstName" name="FirstName"/><br/>
                
                    <label for="LastName">Last Name*</label><br>
                    <input id="LastName" type="text" name="LastName"/><br>
                    
                    <input type="submit"/>
                </fieldset>
            </form>
        </div>
</div>

